<html>
  <head>
    <title>Application</title>
    <link rel="stylesheet" href="/public/style.css">
    <meta charset="utf-8">
  </head>

  <body>
    <main>
		<h1><%= title %></h1>
    <div>
      <h1>Tasks</h1>
      <ul>
        <% tasks.each do |task| %>
          <li>
            <% if task.completed %>
            <strike><%= task.print %></strike>
            <% else %>
              <%= task.print %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    </main>
  </body>
</html> 